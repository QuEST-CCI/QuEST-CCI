#!/bin/bash
#SBATCH -p exciton -A exciton
#SBATCH -J PF
#SBATCH -o output.slurm
#SBATCH -t 1-00:00:00
#SBATCH -N 1
#SBATCH --ntasks-per-node=1
#SBATCH --mem 1GB

export OMP_NUM_THREADS=1
export MKL_NUM_THREADS=1

THETA=$2
PHI=$3

for k in {0..2000..10}; do
    wc=$( bc -l <<< $k*0.01 )
    echo "A0 = $1 WC = $wc THETA = ${THETA} PHI = ${PHI}"
    python3 Pauli-Fierz_DdotE.py $1 ${wc} ${THETA} ${PHI}
done